# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-anon-key-here

# Redis Cloud Configuration
REDIS_HOST=redis-12045.crce185.ap-seast-1-1.ec2.redns.redis-cloud.com
REDIS_PORT=12045
REDIS_PASSWORD=your-redis-cloud-password-here

# For local development only, you can use REDIS_URL instead
# REDIS_URL=redis://localhost:6379

# LLM API Configuration
LLM_API_KEY=your-groq-api-key-here
LLM_SERVICE=groq  # Options: groq, openai, anthropic

# Rate Limiting Configuration (important for API quota management)
LLM_RATE_LIMIT_DELAY=2.0  # 2 seconds delay between API requests (for 30 RPM limit)

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
FAILED_QUEUE_TTL=3600  # TTL in seconds for failed items in Redis

# Render-specific settings
RENDER=true